<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <a class="brand" href="#">Servitoros</a>
      <div class="nav-collapse">
          <% if user_signed_in? %>
            <%= render_navigation renderer: :bootstrap %>
          <% end %>
        <div class="pull-right">
          <% if user_signed_in? %>
            <div id="login_info">
              <%= link_to(current_user.email, edit_user_registration_path, :id => "btn_user_settings") %>
              | <%= link_to "Sign out", destroy_user_session_path, :method => :delete, :id => "btn_signout" %>
            </div>
          <% else %>
            <%= link_to("Sign in", new_user_session_path, :class => "btn btn-primary", :id => "btn_signin") %>
            <%= link_to("or Sign up!", new_user_registration_path, :class => "btn btn-primary", :id => "btn_signup") %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
